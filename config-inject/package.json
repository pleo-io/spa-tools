{
    "name": "@pleo-io/spa-config-inject",
    "version": "3.1.0",
    "license": "UNLICENSED",
    "author": "Pleo",
    "repository": {
        "type": "git",
        "url": "https://github.com/pleo-io/pleo-tools.git",
        "directory": "config-inject"
    },
    "exports": {
        ".": {
            "types": "./runtime.d.ts",
            "import": "./runtime.js",
            "require": "./runtime.cjs"
        },
        "./vite": {
            "types": "./vite.d.ts",
            "import": "./vite.js",
            "require": "./vite.cjs"
        }
    },
    "types": "./runtime.d.ts",
    "module": "./runtime.js",
    "main": "./runtime.cjs",
    "bin": "./cli.js",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "build": "tsup-node && cp package.json dist",
        "lint:fix": "prettier --write .",
        "lint": "prettier -c .",
        "preinstall": "npx only-allow pnpm",
        "test": "jest",
        "typecheck": "tsc",
        "verify": "pnpm lint && pnpm test && pnpm typecheck"
    },
    "dependencies": {
        "jsesc": "^3.0.2",
        "lodash.merge": "^4.6.2",
        "zod": "^3.21.4"
    },
    "peerDependencies": {
        "vite": "^4.5.1"
    },
    "devDependencies": {
        "@swc/core": "1.3.96",
        "@swc/jest": "0.2.29",
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "29.5.8",
        "@types/jsesc": "^3.0.1",
        "@types/lodash.merge": "^4.6.7",
        "@types/node": "^18.15.11",
        "jest": "29.7.0",
        "prettier": "2.8.8",
        "tsup": "^6.7.0",
        "typescript": "5.2.2",
        "vite": "^4.5.1"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "arrowParens": "always",
        "trailingComma": "none",
        "proseWrap": "always"
    },
    "jest": {
        "clearMocks": true,
        "testEnvironment": "node",
        "transform": {
            ".+\\.(t|j)sx?$": [
                "@swc/jest"
            ]
        }
    }
}
