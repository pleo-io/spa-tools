{
    "name": "@pleo-io/spa-config-inject",
    "version": "0.2.1",
    "license": "UNLICENSED",
    "author": "Pleo",
    "repository": {
        "type": "git",
        "url": "https://github.com/pleo-io/pleo-spa-cicd.git",
        "directory": "config-inject"
    },
    "exports": {
        ".": {
            "import": "./dist/runtime.js"
        },
        "./vite": {
            "import": "./dist/vite.js"
        }
    },
    "types": "./dist/runtime.d.ts",
    "bin": "./dist/cli.js",
    "type": "module",
    "engines": {
        "node": ">=16"
    },
    "publishConfig": {
        "registry": "https://npm.pkg.github.com"
    },
    "scripts": {
        "build": "tsup-node",
        "lint:fix": "prettier --write .",
        "lint": "prettier -c .",
        "preinstall": "npx only-allow pnpm",
        "test": "jest",
        "typecheck": "tsc",
        "verify": "pnpm lint && pnpm test && pnpm typecheck"
    },
    "dependencies": {
        "jsesc": "^3.0.2",
        "lodash.merge": "^4.6.2",
        "zod": "^3.21.4"
    },
    "peerDependencies": {
        "vite": "^4.0.0"
    },
    "devDependencies": {
        "@swc/core": "1.3.50",
        "@swc/jest": "0.2.24",
        "@tsconfig/node16": "^1.0.3",
        "@types/jest": "29.5.0",
        "@types/jsesc": "^3.0.1",
        "@types/lodash.merge": "^4.6.7",
        "@types/node": "^18.15.11",
        "jest": "29.5.0",
        "prettier": "2.8.7",
        "tsup": "^6.7.0",
        "typescript": "5.0.4",
        "vite": "^4.0.0"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "arrowParens": "always",
        "trailingComma": "none",
        "proseWrap": "always"
    },
    "jest": {
        "clearMocks": true,
        "testEnvironment": "node",
        "transform": {
            ".+\\.(t|j)sx?$": [
                "@swc/jest"
            ]
        }
    }
}
