{
    "private": true,
    "name": "@pleo-io/spa-github-actions",
    "version": "8.1.0",
    "scripts": {
        "preinstall": "npx only-allow pnpm"
    },
    "engines": {
        "node": "16.x",
        "pnpm": "8.x"
    },
    "dependencies": {
        "@actions/core": "1.10.0",
        "@actions/exec": "1.1.1",
        "@actions/github": "5.1.1"
    },
    "devDependencies": {
        "@swc/jest": "^0.2.26",
        "@tsconfig/node16": "^1.0.4",
        "@types/common-tags": "^1.8.1",
        "@types/jest": "^29.5.0",
        "action-docs": "^1.2.0",
        "common-tags": "^1.8.2",
        "jest": "29.5.0",
        "prettier": "^2.8.7",
        "ts-jest": "^29.1.0",
        "tsup": "^6.7.0",
        "typescript": "5.0.4"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "bracketSpacing": false,
        "arrowParens": "always",
        "trailingComma": "none",
        "proseWrap": "always"
    },
    "jest": {
        "clearMocks": true,
        "testEnvironment": "node",
        "transform": {
            ".+\\.(t|j)sx?$": [
                "@swc/jest"
            ]
        }
    }
}
